<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
    
<configuration>
    <!-- 설정 -->
    <settings>
        <!-- 카멜케이스 자동 매핑 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- NULL 값 처리 -->
        <setting name="jdbcTypeForNull" value="NULL"/>
        <!-- 지연 로딩 설정 -->
        <setting name="lazyLoadingEnabled" value="true"/>
        <!-- 캐시 설정 -->
        <setting name="cacheEnabled" value="true"/>
    </settings>
    
    <!-- 타입 별칭 -->
    <typeAliases>
        <typeAlias type="com.health.model.User" alias="User"/>
        <typeAlias type="com.health.model.Trainer" alias="Trainer"/>
        <typeAlias type="com.health.model.Matching" alias="Matching"/>
        <typeAlias type="com.health.model.ExercisePlan" alias="ExercisePlan"/>
        <typeAlias type="com.health.model.DietPlan" alias="DietPlan"/>
        <typeAlias type="com.health.model.ExerciseCertification" alias="ExerciseCertification"/>
        <typeAlias type="com.health.model.DietCertification" alias="DietCertification"/>
    </typeAliases>
    
    <!-- 매퍼 파일 위치 지정 -->
    <mappers>
        <!-- 향후 필요시 매퍼 XML 파일 추가 -->
        <!-- <mapper resource="mappers/UserMapper.xml"/> -->
        <!-- <mapper resource="mappers/TrainerMapper.xml"/> -->
        <!-- <mapper resource="mappers/MatchingMapper.xml"/> -->
        <!-- <mapper resource="mappers/PlanMapper.xml"/> -->
        <!-- <mapper resource="mappers/CertificationMapper.xml"/> -->
    </mappers>
    
</configuration>
